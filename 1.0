        StarterGui:SetCore("SendNotification", {
            Title = "BeeSSshota",
            Text = text,
            Duration = 3
        })
    end)
end

local function copyToClipboard(text)
    if setclipboard then
        setclipboard(text)
    elseif toclipboard then
        toclipboard(text)
    else
        safeNotify("Клиент не поддерживает копирование :(")
        return
    end
    safeNotify("Ссылка скопирована")
end

